<div class = "main-container">

<div class = "playlist-pictures">
<%@spotifyPlaylists.each do |sp|%>
<%i = sp['images'].first%>
<div class="overlay-image">
<%= image_tag i['url'], alt: "Le Wagon", width: 200, height:200,  class:"cover" %>
<div class="text">
<%= image_tag "play-button.png", width: 80, height:80,  class:"play-button", id:sp['id']%>
<br>
<br>
<%= sp['owner']['display_name']%>
<br>
<%= sp['name']%>
<p hidden id = "is_dancing"><%= sp['is_dancing']%></p>
</div>
</div>
<%end %>
</div>

<div class="spotify-embed">
   <%= render 'shared/filter'%>
  <iframe src="https://embed.spotify.com/?uri=spotify:playlist:4G4urZbsLroiZ6Inr4CJNC?si=X57TrMaYSo--hdUiPasIxQ" height=auto frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
</div>


</div>

