<div class = "banner" style="background-image: url('https://source.unsplash.com/pJadQetzTkI');">
    <h1> Blendtapes</h1>
    <h2> Artists curated playlists, a la carte</h2>
</div>
<div class = "main-container">
<div id = left-part>
  <div id = filter-part>
    <br>
    <h3> Filter by your mood and start digging our selection </h3>
    <br>
    <%= render 'shared/filter'%>
  </div>
  <div id = "playlist-pictures">
  <%@playlists.each do |sp|%>
    <div class="overlay-image">
    <%= cl_image_tag sp.photo, alt: "Le Wagon", width: 180, height:180, class:"cover"%>
    <div class="text">
    <%= image_tag "play-button.png", width: 80, height:80,  class:"play-button", id:sp.SpotifyId, name:sp.name, description: sp.description, artist: sp.artistName, bio: sp.bio, avatar: sp.avatar%>
    <br>
    <br>
    <%= sp.ownerName%>
    <br>
    <%= sp.name%>
    <p hidden id = "is_dancing"><%= sp.is_dancing%></p>
    <p hidden id = "is_dancing_filtered">false</p>
    <p hidden id = "is_vocal"><%= sp.is_vocal%></p>
    <p hidden id = "is_vocal_filtered">false</p>
    <p hidden id = "is_robot"><%= sp.is_robot%></p>
    <p hidden id = "is_robot_filtered">false</p>
    <p hidden id = "is_summer"><%= sp.is_summer%></p>
    <p hidden id = "is_summer_filtered">false</p>
    </div>
    </div>
  <%end %>
  </div>
</div>

<div id = "right-part">
    <div class = "info">
      <div class = "info-top">
        <%= cl_image_tag @defaultPlaylist.avatar, class:"avatar" %>
        <div class = "info-text">
          <p id = "artist-name"> <%=@defaultPlaylist.artistName%> <br> </p>
          <p id = "playlist-description"> <%=@defaultPlaylist.name%>: <%=@defaultPlaylist.description%> </p>
        </div>
      </div>
      <div class = "info-bottom">
        <p id = "artist-bio"> <%=@defaultPlaylist.bio%></p>
      </div>
    </div>
  <iframe src=<%="https://embed.spotify.com/?uri=spotify:playlist:" + @defaultPlaylist.SpotifyId%>height=auto frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
</div>



</div>

